extends ../layout

block content
  .auth-container
    .auth-form
      h2 Вхід до системи
      
      if error
        .error-message #{error}
      
      form(method='POST', action='/auth/login')
        .form-group
          label(for='email') Email:
          input#email(type='email', name='email', required)
        
        .form-group
          label(for='password') Пароль:
          input#password(type='password', name='password', required)
        
        .form-group
          button.btn.btn-primary(type='submit') Увійти
        
        .auth-links
          p Немає акаунту? 
            a(href='/auth/register') Зареєструватися
        
        .demo-info
          p 
            strong Тестові акаунти:
          p admin@example.com / password123
          p user1@example.com / password123